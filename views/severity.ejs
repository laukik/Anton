  </ul>
  <br/>
  <br/>
  <div class="row">
    <div class="col-lg-4">
      <h1><span class="badge badge-default form form-control form-input">Existing Statuses </span></h1>
      <table class="table table-striped table-bordered table-hover">
        <thead>
        </tr>
        <tr>
          <th>#</th>
          <th>Status</th>
        </thead>
        <tbody>

          <% for( var i = 0 ; i < severity.length; i ++){ %>
            <tr>
              <th scope="row"><%= i %></th>
              <td>
                <%= severity[i].severity %>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-lg-4">
        <h1><span class="badge badge-default form form-control form-input">Add New Severity </span></h1>
        <form class="form" action="/severity" method="post">
          <input class="form form-control form-input"  type="text" required="true" placeholder="New Severity" name="severity" >
          <button type="submit" style="margin-top:8px" class="form form-control btn btn-success">Submit</button>
        </form>
      </div>
      <div class="col-lg-4"/>
    </div>
