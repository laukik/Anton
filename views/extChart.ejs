                  <option value="taskType" > Task Type</option>
                  <option value="status" > Status </option>
                  <option value="area" > Area</option>
                  <option value="app" > Application</option>
              </select>
            </div>
            <!-- task type selection -->
            <div class="card checkbox form form-control jumbotron" style="margin-bottom:5px" >
              <label class="form form-control badge badge-default"> <span class="fa fa-bug" title="Area" aria-hidden="true"/> Task Type </label>
              <label><input type="checkbox"  selected="selected" value="" name = "taskType" checked > All </label>
              <% for( var i = 0; i < tasktypes.length;i++){ %>
                <label><input type="checkbox" value="<%= tasktypes[i].taskType %>" name = "taskType" > <%= tasktypes[i].taskType %> </label>
                <% } %>
            </div>
            <!-- status selection -->
            <div class="card checkbox form form-control jumbotron" style="margin-bottom:5px" >
              <label class="form form-control badge badge-default"> <span class=" fa fa-code" title="status" aria-hidden="true"/> Status </label>
              <br>
              <label><input type="checkbox"  selected="selected" value="" name = "status" checked > All </label>
              <% for( var i = 0; i < status.length;i++){ %>
                <label><input type="checkbox" value="<%= status[i].status %>" name = "status" > <%= status[i].status %> </label>
                <% } %>
            </div>
            <!-- Severity Selection -->
            <div class="card checkbox form form-control jumbotron" style="margin-bottom:5px" >
              <label class="form form-control badge badge-default"> <span class="fa fa-compass" title="Area" aria-hidden="true"/> Severity </label>
              <br>
              <label><input type="checkbox"  selected="selected" value="" name = "severity" checked > All </label>
              <% for( var i = 0; i < severity.length;i++){ %>
                <label><input type="checkbox" value="<%= severity[i].severity %>" name = "severity" > <%= severity[i].severity %> </label>
              <% } %>
            </div>
            <!-- Application Selection -->
            <div class="card checkbox form form-control jumbotron" style="margin-bottom:5px" >
              <label class="form form-control badge badge-default"> <span class="fa fa-compass" title="Application" aria-hidden="true"/> Application </label>
              <br>
              <label><input type="checkbox"  selected="selected" value="" name = "app" checked > All </label>
              <% for( var i = 0; i < app.length;i++){ %>
