            </div>
          </div>
          <div class="col-lg-6">
            <!-- user selection -->
            <div class="card checkbox form form-control jumbotron" style="margin-bottom:5px" >
              <label class="form form-control badge badge-default" > <span class="fa fa-user-circle" title="Area" aria-hidden="true"/> User </label>
