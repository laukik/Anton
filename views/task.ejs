  <div class="row">
    <div class="col-lg-3">
      <h1><span class="badge badge-default form form-control form-input">Add New Task </span></h1>
      <form class="form" action="/task" method="post">
        <select name = "username" class="combobox form form-control" style="margin-bottom:5px" autofocus>

          <% for( var i = 0; i < users.length;i++){ %>
            <option value="<%= users[i].username %>" ><%= users[i].username %></option>
            <% } %>
          </select>
          <!-- <input class="form form-control form-input" style="margin-bottom:5px" type="text" required="true" placeholder="Employee ID" name="employeeId" > -->
          <select name = "taskType" class="combobox form form-control" style="margin-bottom:5px" >
            <% for( var i = 0; i < tasktypes.length;i++){ %>
              <option value="<%= tasktypes[i].taskType %>" ><%= tasktypes[i].taskType %></option>
              <% } %>
            </select>
            <div class='input-group date' id='datetimepicker1' style="margin-bottom:5px" >
              <input class="datepicker form form-control form-input" data-date-format="dd/mm/yyyy" placeholder="Completion Date" name="workDate"/>
              <span class="input-group-addon">
                <span class="fa fa-calendar-plus"></span>
              </span>
            </div>
            <input class="form form-control form-input"  type="text" style="margin-bottom:5px" required="true"   placeholder="Description" name="description" >
            <select name = "status" class="combobox form form-control" style="margin-bottom:5px" >

              <% for( var i = 0; i < status.length;i++){ %>
                <option value="<%= status[i].status %>" ><%= status[i].status %></option>
                <% } %>
              </select>
              <select name = "area" class="combobox form form-control" style="margin-bottom:5px" >
                <% for( var i = 0; i < areas.length;i++){ %>
                  <option value="<%= areas[i].area %>" ><%= areas[i].area %></option>
                  <% } %>
              </select>
              <select name = "severity" class="combobox form form-control" style="margin-bottom:5px" >
                <% for( var i = 0; i < severity.length;i++){ %>
                  <option value="<%= severity[i].severity %>" ><%= severity[i].severity %></option>
                  <% } %>
              </select>
              <select name = "app" class="combobox form form-control" style="margin-bottom:5px" >
                <% for( var i = 0; i < app.length;i++){ %>
                  <option value="<%= app[i].app %>" ><%= app[i].app %></option>
                  <% } %>
              </select>
              <input class="form form-control form-input" style="margin-bottom:5px"  type="text" required="true" placeholder="Defect ID" name="taskId" >
              <button type="submit" style="margin-top:8px" class="form form-control btn btn-success">Submit</button>
              </form>
            </div>
            <div class="col-lg-9">
              <h1>
                <!-- <span class="badge badge-default form form-control form-input"> -->
                Existing Tasks </span>
              </h1>
              <table class="table table-striped table-bordered table-hover ">
                <thead>
                </tr>
                <tr>
                  <th>#</th>
                  <th> User Name</th>
                  <th> Task Type</th>
                  <th> Completion Date</th>
                  <th> Description</th>
                  <th> Status</th>
                  <th> Area</th>
                  <th> Severity</th>
                  <th> Application</th>
                  <th> Defect ID</th>
                </thead>
                <tbody>
                  <% for( var i = 0 ; i < tasks.length; i ++){ %>
                    <!-- <span class="badge badge-primary"> -->
                    <tr>
                      <th scope="row"><%= i %></th>
                      <td><%= tasks[i].username %></td>
                      <td><%= tasks[i].taskType %></td>
                      <td><%= tasks[i].workDate %></td>
                      <td><%= tasks[i].description %></td>
                      <td><%= tasks[i].status %></td>
                      <td><%= tasks[i].area %></td>
                      <td><%= tasks[i].severity %></td>
                      <td><%= tasks[i].app %></td>
                      <td><%= tasks[i].taskId %></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
