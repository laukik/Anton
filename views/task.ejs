<html>
  <script src="js/jquery-3.2.1.min.js"></script>
  <script src="js/moment.js"></script>
  <script src="js/collapse.js"></script>
  <script src="js/transition.js"></script>
  <script src="js/combo.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
  <script src="js/dateTime.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
  <link href="styles/open-iconic/font/css/open-iconic-bootstrap.css" rel="stylesheet">
  <link href="https://use.fontawesome.com/releases/v5.0.1/css/all.css" rel="stylesheet">
  <link href="styles/dateTime.css" rel="stylesheet">
  <link href="styles/combo.css" rel="stylesheet">
  <body class="container" >
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="/">
          <span class="oi oi-home" title="Home" aria-hidden="true"/>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/area">
          <span class="fa fa-compass" title="Area" aria-hidden="true"/>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/status">
          <span class="oi oi-code" title="Status" aria-hidden="true"/>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/task">
          <span class="fa fa-tasks" title="Task" aria-hidden="true"/>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/filter">
          <span class="fa fa-filter" title="Filter" aria-hidden="true"/>
        </a>
      </li>
    </ul>
    <br/>
    <br/>
    <div class="row">
      <div class="col-lg-4">
        <h1><span class="badge badge-default form form-control form-input">Add New Task </span></h1>
        <form class="form" action="/task" method="post">
          <input class="form form-control form-input" style="margin-bottom:5px" type="text" required="true" placeholder="Employee ID" name="employeeId" >
          <input class="form form-control form-input" style="margin-bottom:5px" type="text" required="true" placeholder="Task Type" name="taskType" >
          <div class='input-group date' id='datetimepicker1' style="margin-bottom:5px" >
            <input type='text' class="form form-control form-input" required="true" placeholder="Completion Date" name="workDate"/>
            <span class="input-group-addon">
              <span class="fa fa-calendar-plus"></span>
            </span>
          </div>
          <input class="form form-control form-input"  type="text" style="margin-bottom:5px" required="true"   placeholder="Description" name="description" >
          <select name = "status" class="combobox form form-control" style="margin-bottom:5px" >
            <% for( var i = 0; i < status.length;i++){ %>
              <option value=<%= status[i].status %> ><%= status[i].status %></option>
            <% } %>
          </select>
          <select name = "area" class="combobox form form-control" style="margin-bottom:5px" >
            <% for( var i = 0; i < areas.length;i++){ %>
              <option value=<%= areas[i].area %> ><%= areas[i].area %></option>
            <% } %>
          </select>
          <input class="form form-control form-input" style="margin-bottom:5px"  type="text" required="true" placeholder="Defect ID" name="taskId" >
          <button type="submit" style="margin-top:8px" class="form form-control btn btn-success">Submit</button>
        </form>
      </div>
      <div class="col-lg-8">
        <h1><span class="badge badge-default form form-control form-input">Existing Tasks </span></h1>
        <table class="table table-striped table-bordered table-hover">
          <thead>
          </tr>
            <tr>
              <th>#</th>
              <th> Employee ID</th>
              <th> Task Type</th>
              <th> Completion Date</th>
              <th> Description</th>
              <th> Status</th>
              <th> Area</th>
              <th> Defect ID</th>
          </thead>
          <tbody>
              <% for( var i = 0 ; i < tasks.length; i ++){ %>
                <!-- <span class="badge badge-primary"> -->
                <tr>
                  <th scope="row"><%= i %></th>
                  <td><%= tasks[i].employeeId %></td>
                  <td><%= tasks[i].taskType %></td>
                  <td><%= tasks[i].workDate %></td>
                  <td><%= tasks[i].description %></td>
                  <td><%= tasks[i].status %></td>
                  <td><%= tasks[i].area %></td>
                  <td><%= tasks[i].taskId %></td>
                </tr>
              <% } %>
          </tbody>
        </table>
      </div>

    </div>
  </body>
  <script type="text/javascript">
    $(function () {
      $('#datetimepicker1').datetimepicker();
    });
  </script>
</html>
