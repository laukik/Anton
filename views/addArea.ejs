<html>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
  <link href="styles/open-iconic/font/css/open-iconic-bootstrap.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
  <body class="container" >
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="/">
          <span class="oi oi-home" title="Home" aria-hidden="true"/>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/area">
          <span class="oi oi-location" title="Area" aria-hidden="true"/>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/status">
          <span class="oi oi-code" title="Status" aria-hidden="true"/>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">
          <span class="oi oi-task" title="Task" aria-hidden="true"/>
        </a>
      </li>
    </ul>
    <br/>
    <br/>
    <div class="row">
      <div class="col-lg-4">
        <h1><span class="badge badge-default form form-control form-input">Existing Area </span></h1>
        <table class="table table-striped table-bordered table-hover">
          <thead>
          </tr>
            <tr>
              <th>#</th>
              <th>Area</th>
          </thead>
          <tbody>

              <% for( var i = 0 ; i < areas.length; i ++){ %>
                <!-- <span class="badge badge-primary"> -->
                <tr>
                  <th scope="row"><%= i %></th>
                  <td>
                    <!-- <span class="oi oi-bullhorn" title="icon name" aria-hidden="true"></span> -->
                    <%= areas[i].area %>
                  </td>
                <!-- </span> -->
                <!-- <span class="oi oi-trash" title="icon name" aria-hidden="true" onclick="remove"></span> -->
                <!-- <br/> -->
                </tr>
              <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-lg-4">
        <h1><span class="badge badge-default form form-control form-input">Add New Area </span></h1>
        <form class="form" action="/area" method="post">
          <input class="form form-control form-input"  type="text" name="area" >
          <button type="submit" style="margin-top:8px" class="form form-control btn btn-success">Submit</button>
        </form>
      </div>
      <div class="col-lg-4"/>
    </div>
  </body>
</html>
